pipeline {
    agent any

    tools {
        maven 'maven'
        jdk 'java-11'
    }

    stages {

        stage('Git Checkout') {
            steps {
                git branch: 'maven-proj', url: 'https://github.com/gdambal24/guru-devops_pro-125.git'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn package'
            }
        }
    }
}

